---
import Layout from "../layouts/Layout.astro";
import LinkInput from "../components/LinkInput.astro";
import Table from "../components/Table.astro";
---

<Layout title="LinkingShort">
	<main class="min-h-screen flex flex-col p-48 items-center gap-12">
		<div class="flex flex-col justify-center items-center">
			<h1>Linking<span class="text-lsblue">Short</span></h1>
			<p>The ultimate <span class="text-lsblue font-semibold">URL</span> shortening experience</p>
		</div>
		<LinkInput />
	</main>
</Layout>

<style>
	h1 {
		font-family: "Plus Jakarta Sans", sans-serif;
		font-size: 102px;
		font-weight: bold;
	}
</style>
